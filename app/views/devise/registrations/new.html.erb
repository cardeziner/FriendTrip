

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div>
  <div class="small-6 large-2 columns">
    <div class="bg-reg"></div>
    <div class="">
      <br/>
        <div class="row">
          <div class="column opac-black">
            <div class="text top-margin">
              <h2 class="text-white center">SIGN UP FOR FRIENDTRIP</h2>
              <div class="text-white">
        <span>
          <div class="field"><br />
            <%= f.label :first_name, "FIRST NAME", class:"text-white"%>
            <%= f.text_field :first_name%>
          </div>
        </span>

          <div class="field">
            <%= f.label :last_name, "LAST NAME", class:"text-white" %>
            <%= f.text_field :last_name%>
          </div>

          <div class="field">
            <%= f.label :email, "EMAIL" ,class:"text-white" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "PASSWORD",class:"text-white"%>
            <% if @minimum_password_length %>
            <em className="text-white">(<%= @minimum_password_length %> CHARACTERS MINIMUM)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "CONFIRM PASSWORD", class:"text-white" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div><br/>

          <div class="text center submit-button">
            <%= f.submit "SIGN UP", class: 'btn btn-primary' %>
          </div><br/>
          <h3 class="center text"> OR </h3>
            <% end %>

          <p class="center"><%= render "devise/shared/links" %></p><br/>
        </div>

      </div>
    </div>
  </div>
