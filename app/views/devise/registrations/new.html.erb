

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div>
    <div class="bg-reg"></div>
    <div>
      <br/>
        <div class="row">
          <div class="col-xs-8 col-sm-9 col-md-5 opac-black">
            <div class="text top-margin">
              <h2 class="text-yellow center">SIGN UP FOR FRIENDTRIP</h2>
              <span>
                <div class="field"><br />
                  <%= f.label :first_name, "First name", class:"text-white"%>
                  <%= f.text_field :first_name%>
                </div>
              </span>

                <div class="field">
                  <%= f.label :last_name, "Last name", class:"text-white" %>
                  <%= f.text_field :last_name%>
                </div>

                <div class="field">
                  <%= f.label :email, "Email" ,class:"text-white" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="field">
                  <%= f.label :password, "Password",class:"text-white"%>
                  <% if @minimum_password_length %>
                  <em className="text-white">(<%= @minimum_password_length %> CHARACTERS MINIMUM)</em>
                  <% end %><br/>
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation, "Password confirmation", class:"text-white" %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div><br/>

                <div class="text center submit-button">
                  <%= f.submit "Sign up", class: 'btn btn-primary' %>
                </div><br/>
                <h3 class="center text vert"> OR </h3>
                  <% end %>

          <p class="center"><%= render "devise/shared/links" %></p><br/>
        </div>
      </div>
  </div>
